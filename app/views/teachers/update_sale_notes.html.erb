<title>Sell Notes</title>
<%= render "layouts/stylesheets"%>
<%= render "layouts/javascripts"%>

<div class="bg-dark dk" id="wrap">
  <%= render "teachers/top"%>
  <%= render :partial => "teachers/left", :locals => { :active => 'Sell Notes' }%>
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <h4>Sell Notes</h4>
        <div class="row vdiocont">    
          <%= form_for @sale_notes, url: teacher_update_sale_notes_path do |f| %>
            <div class="form-group margunrve">
              <label for="email">Title</label>
              <%=f.text_field :title, class: "form-control",placeholder: "Title" %>
            </div>
            <div class="form-group margunrve">
              <label for="pwd">Description</label>
              <%=f.text_area :description, class: "form-control",placeholder: "Description" %>
            </div>
            <div class="form-group margunrve">
              <label for="email">Upload Pic</label>
              <%= f.file_field :document, class: "form-control"%>
            </div>
            <div class="form-group margunrve text-center">
              <%=f.submit "Submit", class: "btn btn-default"%>
              <button type="submit" class="btn btn-default">Cancel</button>
            </div>
          <%end%> 
        </div>
      </div>
      <!-- /.inner -->
    </div>
    <!-- /.outer -->
  </div>
  <!-- /#content -->
</div>
<!-- /#wrap -->

