<title>Apply School</title>
<%= render "layouts/stylesheets"%>

<div class="bg-dark dk" id="wrap">
  <%= render "teachers/top"%>
  <%= render :partial => "teachers/left", :locals => { :active => 'Videos' }%>
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <hr> 
        <h3>Demo Videos</h3>
        <hr>
        <div class="row vdiocont">
          <%= form_for @demo_video, url: teacher_create_demo_videos_path do |f| %>
            <% if @demo_video.errors.any? %>
              <% @demo_video.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            <% end %>
            <div class="form-group">
              <label for="email">Title :</label>
              <%=f.text_field :title, class: "form-control",placeholder: "Title" %>
            </div>
            <div class="form-group">
              <label for="pwd">Description :</label>
             <%=f.text_area :description, class: "form-control",placeholder: "Description" %>
            </div>
            <div class="form-group">
              <label for="email">Video Upload :</label>
              <%=f.file_field :video, class: "form-control"%>
            </div>
            <div class="text-center">
              <%=f.submit "Submit",class: "btn btn-primary"%>
              <button type="button" class="btn btn-danger">Cancel</button>
            </div>
          <%end%>
        </div>
      </div>
      <!-- /.inner -->
    </div>
    <!-- /.outer -->
  </div>
</div>
<!-- /#wrap -->

<footer class="Footer bg-dark dker">
