<title>Apply School</title>
<%= render "layouts/stylesheets"%>

<div class="bg-dark dk" id="wrap">
  <%= render "teachers/top"%>
  <%= render :partial => "teachers/left", :locals => { :active => 'Slots' }%>
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <hr> 
          <h3>Create Slot</h3>
        <hr>
        <div class="row vdiocont">
          <%= form_for @slots, url: teacher_create_slots_path do |f| %>
            <div class="form-group">
              <label for="email">Name :</label>
              <%=f.text_field :name, class: "form-control",placeholder: "Slot Name" %>
            </div>
            <div class="form-group">
              <label for="pwd">Date :</label>
              <%=f.text_field :date, class: "form-control",placeholder: "Date" %>
            </div>
            <div class="form-group">
              <label for="email">Time :</label>
              <%=f.text_field :time, class: "form-control",placeholder: "Time" %>
            </div>
            <div class="form-group">
              <label for="pwd">Duration :</label>
              <%=f.text_field :duration, class: "form-control",placeholder: "Duration" %>
            </div>
            <div class="text-center">
              <%=f.submit "Submit",class: "btn btn-primary"%>
              <button type="button" class="btn btn-danger">Cancel</button>
            </div>
          <%end%>
        </div>
      </div>
      <!-- /.inner -->
    </div>
    <!-- /.outer -->
  </div>
</div>
<!-- /#wrap -->

