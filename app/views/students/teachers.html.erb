<title>Apply School</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<%= render "layouts/stylesheets"%>

<%= stylesheet_link_tag  "searchbar" %>
<style type="text/css">
  .bigbox {
    border: 1px solid;
    border-radius: 8px;
    margin-bottom: 40px;
    padding: 10px;
  }
  .img-responsive.collglogo {
    width:80px;
  }
  .col-md-12.Anxtysf {
    padding: 20px 0 2px;
    
  }
  .btn.btn-primary.TxtceNtr {
    float: right;
  }
  .paDtpZeRo {
    margin-top: 0 !important;
  } 
</style>  

<div class="bg-dark dk" id="wrap">
  <%= render "students/top"%>
  <%= render :partial => "students/left", :locals => { :active => 'Teachers' }%>
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <h3>Teachers</h3>
        <hr>
        <form class="form-wrapper cf">
          <%= form_tag teacher_schools_path(current_user), :method => 'get' do %>
            <%= select_tag "name",options_for_select(@name),prompt: "Select School"%>
            <%= select_tag "city_id",options_for_select(@cities.collect{|p| [p.name, p.id]}),prompt: "Select City"%>
            <%= select_tag "qualification",options_for_select(@subjects),prompt: "Select Subject"%>
            <%= button_tag "Search" ,:class => "sEarch"%>
          <% end %>
        </form>
        <div class="col-md-12">
          <h3>Schools</h3>
          <% if @search.present?%>
            <% @search.each do |search|%>
              <div class="bigbox">
                <div class="row">
                  <div class="col-md-12">
                    <div class="col-md-2">
                      <% if search.profile_image.present?%>
                        <%= image_tag search.profile_image ,class: "img-thumbnail img-responsive collglogo"%>
                      <%else%>
                        <%= image_tag("img.jpg", class: "img-thumbnail img-responsive collglogo")%>
                      <% end %>
                    </div>
                    <div class="col-md-10">
                      <a href="/users/student_show?id=<%= search.id %>" target="_blank">
                        <h4><%= search.name %></h4>
                        <span> <i class="fa fa-map-marker"></i> <%= search.address%>,
                          <% if @city = City.find_by_id(search.city_id)%><%= @city.name%><%end%>,
                          <% if @state = Stat.find_by_id(search.state_id)%><%= @state.name%> <%end%>,
                          <% if @country = Countr.find_by_id(search.country_id)%><%= @country.name%> <%end%>
                          </span>
                      </a>
                      <%=link_to "Available Slots",student_slots_path(teacher),class: "btn btn-primary TxtceNtr" %>
                    </div>
                  </div>
                </div>
              </div>
            <%end%>
          <%else%>
            <% if @teachers.present? %>
              <% @teachers.each do |teacher|%>
                <div class="bigbox">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="col-md-2">
                        <% if teacher.profile_image.present?%>
                          <%= image_tag teacher.profile_image ,class: "img-thumbnail img-responsive collglogo"%>
                        <%else%>
                          <%= image_tag("img.jpg", class: "img-thumbnail img-responsive collglogo")%>
                        <% end %>
                      </div>
                      <div class="col-md-10">
                      <a href="/users/student_show?id=<%= teacher.id %>" target="_blank">
                        <h4><%= teacher.name %></h4>
                        <span> <i class="fa fa-map-marker"></i> <%= teacher.address%>,
                        <% if @city = City.find_by_id(teacher.city_id)%><%= @city.name%><%end%>,
                        <% if @state = Stat.find_by_id(teacher.state_id)%><%= @state.name%> <%end%>,
                        <% if @country = Countr.find_by_id(teacher.country_id)%><%= @country.name%> <%end%>
                        </span>
                      </a>
                      <%=link_to "Available Slots",student_slots_path(teacher),class: "btn btn-primary TxtceNtr" %>
                      </div>
                    </div>
                  </div>
                </div>
              <%end%>
            <%else%>
              <div class="bigbox">
                <div class="row">
                  <div class="col-md-12">
                    <div class="col-md-2">
                      <%= image_tag("img.jpg", class: "img-thumbnail img-responsive collglogo")%>
                    </div>
                    <div class="col-md-10">
                      <h4>Indian Institute of Technology (IITB), Mumbai </h4>
                      <span> <i class="fa fa-map-marker"></i> Mumbai,Maharshtra</span>
                    </div>
                    <div class="col-md-12 col-sm-12 col-xs-12 Anxtysf">
                      <div class="col-md-3 col-sm-6 col-xs-6">
                        <i class="fa fa-map-marker "></i> <span>Avg Annual Fees</span>
                        <h6>1 lakh</h6>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-6">
                        <i class="fa fa-map-marker"></i> <span>Avg Annual Fees</span>
                        <h6>1 lakh</h6>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-6">
                        <i class="fa fa-map-marker"></i> <span>Avg Annual Fees</span>
                        <h6>1 lakh</h6>
                      </div>
                      <div class="col-md-3 col-sm-6 col-xs-6">
                        <button class="btn btn-primary TxtceNtr">Apply Now </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <%end%>
          <%end%>
        </div>
        <hr>
      </div>
      <!-- /.inner -->
    </div>
    <!-- /.outer -->
  </div>
  <!-- /#content -->
</div>
<!-- /#wrap -->

<footer class="Footer bg-dark dker">
    <p>2017 &copy; Tabashi Technology Private Limited</p>
