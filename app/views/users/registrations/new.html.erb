<title>Material design sign up form</title>
<meta name="viewport" content="width=device-width, initial-scale=1">

<%= stylesheet_link_tag  "bootstrap.min" %>
<%= stylesheet_link_tag  "font-awesome.min" %>
<%= stylesheet_link_tag  "header" %>
<%= stylesheet_link_tag  "login" %>

<div class="container-fluid backgrdimg">  
  <%= render 'layouts/header'%>
  <div id="login-boxone">
    <div class="row mainrowcust">
      <div class="col-sm-6 col-md-6 col-lg-6 col-xs-12 padzerosty">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%#= devise_error_messages! %>
          <%#= flash[:recaptcha_error] %>
          <div class="left">
            <h1>Sign up</h1>
            <%= f.email_field :email, autofocus: true,placeholder: "Email" ,required: true%>
            <% if @minimum_password_length %>
              <%= f.password_field :password, autocomplete: "off",placeholder: "Password",required: true %><em>(<%= @minimum_password_length %> characters minimum)</em>
              <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "Confirm Password",required: true %>   
            <% end %>
            <%= f.text_field :phone_no, autocomplete: "off",placeholder: "Phone ",required: true %>
            <div class="field">
              <%#= f.label :Role %>
              <% User.roles.keys.each do |role| %>
                <%= f.radio_button :role, role %>
                <%= f.label role.to_sym %>
              <% end %>
              </br>
              <%#= recaptcha_tags theme: 'dark',style: "transform:scale(0.77);-webkit-transform:scale(0.77);transform-origin:0 0;-webkit-transform-origin:0 0;" %>


               <div class="g-recaptcha" data-theme="light" data-sitekey="6LdXHkgUAAAAAD7Np1pRKTNKlHEi2t_fn8Ue6bKo" style="transform:scale(0.77);-webkit-transform:scale(0.77);transform-origin:0 0;-webkit-transform-origin:0 0;"></div> 
               
              <%= f.submit "Sign up" %>
              <p class="aldbtnsty">Already Registered??.. <%= link_to "Sign In",new_user_session_path %></p> 
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-md-6 col-lg-6 col-xs-12 padzerosty">
          <div class="rightone">
            <div class="scoilbtnctr">
              <%= link_to user_facebook_omniauth_authorize_path do %>
                <button class="social-signin facebook">Sign Up with facebook</button>
              <% end %>
              <%= link_to user_twitter_omniauth_authorize_path do %>
                <button class="social-signin twitter">Sign Up with Twitter</button>
              <% end %>
              <%= link_to user_google_oauth2_omniauth_authorize_path do %>
                <button class="social-signin google">Sign Up with Google+</button>
              <% end %>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>

<%= render 'layouts/footer'%>

<%= javascript_include_tag "jquery.min" %>
<%= javascript_include_tag "bootstrap.min" %>
<%= javascript_include_tag "jquery.stellar" %>
<%= javascript_include_tag "jquery.appear" %>
<%= javascript_include_tag "jquery.nicescroll.min" %>
<%= javascript_include_tag "script" %>

 <style type="text/css"> 
#rc-imageselect {
transform:scale(0.77);
-webkit-transform:scale(0.77);
transform-origin:0 0;
-webkit-transform-origin:0 0;
} 

@media screen and (max-height: 575px){ 
  #rc-imageselect, .g-recaptcha {
    transform:scale(0.77);
    -webkit-transform:scale(0.77);
    transform-origin:0 0;
    -webkit-transform-origin:0 0;
    } 
  }
</style> 


