<title>Vendors</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<%= render "layouts/stylesheets"%>

<div class="bg-dark dk" id="wrap">
  <%= render "schools/top"%>
  <%= render :partial => "schools/left", :locals => { :active => 'Vendors' }%>
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <h4>Applied Vendors</h4> 
        <div class="table-responsive ">          
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone No</th>
                <th>Description</th>
                <th>Applied For</th>
                <!-- <th>Status</th> -->
              </tr>
            </thead>
            <% @vendor_requirements.each do |vendor|%>
            <% @vendors = AppliedSchool.where("school_id = ? AND role= ?",vendor.id,"vendor")%>
              <% @vendors.each do |v|%>
                <tbody>
                  <tr>
                    <td><%=v.name%></td>
                    <td><%=v.email%></td>
                    <td><%=v.phone_no%></td>
                    <td><%=v.description%></td>
                    <% @post = VendorRequire.find(v.school_id)%>
                    <td><%=@post.name%></td>
                    <!-- <td>
                      <button type="button" class="btn btn-primary btn-xs">Delete</button>
                      <button type="button" class="btn btn-primary btn-xs">Mark Complete</button>
                    </td> -->
                  </tr>
                </tbody>
              <%end%>
            <%end%>
          </table>
        </div>  
      </div>
      <!-- /.inner -->
    </div>
    <!-- /.outer -->
  </div>
  <!-- /#content -->
</div>
<!-- /#wrap -->

